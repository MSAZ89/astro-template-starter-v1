---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="bg-black border hover:border-white border-slate-800 text-white p-8 group hover:bg-transparent hover:text-white transition-colors duration-300 ease-in-out"
>
  <a href={href}>
    <h2
      class="text-lg font-bold mb-4 group-hover:translate-x-2 transition-transform duration-300 ease-in-out flex justify-between items-center"
    >
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
